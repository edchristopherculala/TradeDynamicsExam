<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_layout_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_weight="2"

    android:layout_marginVertical="3dp"
    android:elevation="3dp"
    android:background="@drawable/product_border"
    android:orientation="horizontal">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_weight="3"
    android:orientation="vertical">
    <TextView

        android:id="@+id/txtProductCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeui"
        android:gravity="center"
        android:maxLines="1"
        android:text="P-1"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="4sp"
        app:autoSizeTextType="uniform"


        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:fontFamily="@font/segoeui"
        android:gravity="center"
        android:maxLines="1"
        android:text="Product Sample"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"

        app:autoSizeMaxTextSize="16sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="4sp"
        app:autoSizeTextType="uniform"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titlecategory"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product unit:"
            android:textSize="14sp"
            android:fontFamily="@font/segoeui"
            android:textStyle="normal"
            android:textColor="@color/gray"



            />
        <TextView
            android:id="@+id/txtproductunit"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit"
            android:textSize="14sp"
            android:fontFamily="@font/segoeui"
            android:textStyle="normal"
            android:textColor="@color/black"

            android:maxLines="1"
            android:layout_marginLeft="4dp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeStepGranularity="4sp"
            app:autoSizeTextType="uniform"

            />

    </LinearLayout>


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titlesellprice"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:fontFamily="@font/segoeui"
            android:maxLines="1"
            android:text="Product price:"
            android:textColor="@color/gray"


            />

        <TextView
            android:id="@+id/txtproductprice"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/segoeui"
            android:maxLines="1"
            android:text="150.00"
            android:textColor="@color/black"

            android:textSize="14sp"
            android:textStyle="normal"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeStepGranularity="4sp"
            app:autoSizeTextType="uniform"

            />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titleboughtprice"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product expiry date:"
            android:textSize="14sp"
            android:fontFamily="@font/segoeui"
            android:textStyle="normal"
            android:textColor="@color/gray"


            />
        <TextView
            android:id="@+id/txtproductexpirydate"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January 16,2022"
            android:textSize="14sp"
            android:fontFamily="@font/segoeui"
            android:textStyle="normal"
            android:textColor="@color/black"

            android:maxLines="1"
            android:layout_marginLeft="4dp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeStepGranularity="4sp"
            app:autoSizeTextType="uniform"

            />

    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/titleQUANTITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeui"
        android:gravity="center"
        android:text="Available inventory:"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtProductQUANTITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       android:layout_marginLeft="4dp"

        android:fontFamily="@font/segoeui"
        android:gravity="center"
        android:text="50"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/titlepcs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="2dp"

        android:fontFamily="@font/segoeui"
        android:gravity="center"
        android:text="pcs."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />
</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/titleinventoryCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:text="Available inventory cost:"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtremainingCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="4dp"

            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:text="50"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal" />


    </LinearLayout>

</LinearLayout>

    <RelativeLayout

        android:layout_width="100dp"
        android:layout_height="match_parent">

    <ImageView

        android:id="@+id/btnMenu"
        android:layout_width="25dp"
        android:layout_height="25dp"
      android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/menu" />


    <ImageView

        android:id="@+id/productImage1"
        android:layout_below="@id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="4dp"


        />

    </RelativeLayout>



</LinearLayout>